# --- OpenAI Configuration ---
# Your secret API key for accessing OpenAI services.
OPEN_API_KEY=your_openai_api_key_here

# --- PostgreSQL Database Configuration ---
# Full database connection URL (often used by applications, may include pooling)
POSTGRES_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Database connection URL specifically configured for Prisma (might include options like ?schema=public)
POSTGRES_PRISMA_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Database connection URL without connection pooling (often used for migrations)
POSTGRES_URL_NON_POOLING=postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# Individual PostgreSQL connection parameters (alternative to URL string)
POSTGRES_HOST=your_db_host_or_ip
POSTGRES_USER=your_db_username
POSTGRES_PASSWORD=your_db_password
POSTGRES_DATABASE=your_db_name

# --- Supabase Configuration ---
# The base URL for your Supabase project.
SUPABASE_URL=https://your-project-ref.supabase.co
# The Service Role Key (SECRET - grants full backend access, keep this secure!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# The Anon Key (PUBLIC - intended for client-side use, safe to expose)
SUPABASE_ANON_KEY=your_supabase_anon_key
# The JWT Secret (SECRET - used for signing/verifying JWTs if using Supabase Auth)
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_at_least_32_chars_long

# The base URL for your Supabase project (exposed to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
# The Anon Key (PUBLIC - exposed to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
